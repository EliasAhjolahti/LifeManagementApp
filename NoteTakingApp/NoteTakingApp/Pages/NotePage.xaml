<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NoteTakingApp.Pages.NotePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Save"   Priority="0" Command="{Binding SaveCommand}" />
		<ToolbarItem Text="Delete" Priority="1" Command="{Binding DeleteCommand}" />
		<ToolbarItem Text="Share"  Priority="2" Command="{Binding ShareNoteCommand}" />
	</ContentPage.ToolbarItems>

	<Grid Padding="16" RowDefinitions="Auto,*,Auto">
		<Label Text="{Binding Date, StringFormat='Last modified: {0:G}'}" />
		<Editor Grid.Row="1" Text="{Binding Text}" AutoSize="TextChanges" />
		<Label Grid.Row="2" Text="{Binding FileName}" FontSize="12"
               TextColor="{DynamicResource SecondaryTextColor}" />
	</Grid>
</ContentPage>
