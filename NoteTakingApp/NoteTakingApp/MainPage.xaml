<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NoteTakingApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:NoteTakingApp.Models"
    Title="Notes">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="OnAddClicked" />
        <ToolbarItem Text="Refresh" Clicked="OnRefreshClicked" Priority="1" />
    </ContentPage.ToolbarItems>

    <Grid Padding="16">
        <CollectionView x:Name="NotesView"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Note">
                    <Grid Padding="8" RowDefinitions="Auto,Auto">
                        <Label Grid.Row="0"
                               Text="{Binding Text}"
                               LineBreakMode="WordWrap"
                               MaxLines="3" />
                        <Label Grid.Row="1"
                               Text="{Binding Date, StringFormat='{}{0:G}'}"
                               FontSize="12"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout Spacing="8" Padding="24"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center">
                    <Label Text="No notes yet" FontAttributes="Bold" />
                    <Label Text="Tap Add to create your first note." />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>
